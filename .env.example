# Environment variables template
DATABASE_URL="postgresql://postgres:password@localhost:5432/grokade"
JWT_SECRET="your-jwt-secret-key-change-in-production"

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_URL=cloudinary://${CLOUDINARY_API_KEY}:${CLOUDINARY_API_SECRET}@${CLOUDINARY_CLOUD_NAME}

# TwicPics Configuration (if used)
TWICPICS_TOKEN=your_twicpics_token
TWICPICS_DOMAIN=your_domain.twic.pics
TWICPICS_PATH_PREFIX=your_prefix/

# ImageKit Configuration
IMAGEKIT_PRIVATE_KEY=your_private_key
IMAGEKIT_PUBLIC_KEY=your_public_key
IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id

# Client-side public variables (these will be exposed to the browser)
NEXT_PUBLIC_IMAGEKIT_PUBLIC_KEY=your_public_key
NEXT_PUBLIC_IMAGEKIT_URL_ENDPOINT=https://ik.imagekit.io/your_imagekit_id

# For production, use the actual Railway PostgreSQL URL provided in the dashboard
# DATABASE_URL="postgresql://postgres:password@containers-us-west-xxx.railway.app:5432/railway" 